<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="Welcome to our Institute"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.848" app:layout_constraintHorizontal_bias="0.484"
            android:id="@+id/totttal"/>
    <CheckBox
            android:text="Java (500)"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/java_500"
            android:layout_marginTop="88dp"
            android:checked="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.029"/>


    <CheckBox
            android:text="Android (500)"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:id="@+id/android_500"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="236dp"
            android:checked="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.029"/>
    <CheckBox
            android:text="Webtech (500)"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:id="@+id/webtech_500"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.029"/>
    <CheckBox
            android:text="HTML (500)"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:id="@+id/html_500"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.029"/>
    <TextView
            android:text="Select Course"
            android:layout_width="205dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="129dp"
            android:layout_height="52dp"
            android:id="@+id/button" android:layout_marginTop="288dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="Registration fee: 500"
            android:layout_width="160dp"
            android:layout_height="23dp"
            android:id="@+id/total" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />

</android.support.constraint.ConstraintLayout>